@model ALC.IES.WebRange.Models.HeaderModel

@{
    Layout = "";
}

<div class="navbar-header">
    @if (Model.MenuLeft) {
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    }
    <a class="navbar-brand" href="/">
        <img src="~/Content/images/intersport-logo.jpg" height="50" />
    </a>
</div>
<h2 class="nav-title">
    @Html.Raw(Model.Titulo)
</h2>
<ul class="nav navbar-top-links navbar-right">
    @if (Model.Filtros != null && Model.Filtros.Count > 0) {
        ALC.IES.WebRange.cls.Filtro lastF = Model.Filtros.Last();
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-filter fa-fw"></i> <span id="spnFiltro">-Campos-</span> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-messages filtros">
                @foreach (var filtro in Model.Filtros) {
                    <li><a href="#" class="btnFilter" data-id="@filtro.Id">@filtro.Name</a></li>
                    if (!filtro.Equals(lastF)) {
                        <li class="divider"></li>
                    }
                }


            </ul>
            <!-- /.dropdown-messages -->
        </li>
    }
    @if (Model.FiltroNivel) {
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
